@using PagedList
@using PagedList.Mvc
@model IEnumerable<MyTeam.Models.WeekReportDetail>
@{
    if (!string.IsNullOrEmpty(ViewBag.ErrMsg))
    {
        <h3 class="text-danger">@ViewBag.ErrMsg</h3>
        return;
    }

    bool forMain = (bool)ViewBag.ForMain;
    if (!forMain)
    {
        ViewBag.Title = "每周工作";
    }
}
<h2>@ViewBag.Title。</h2>
<p>
    @Html.ActionLink("添加每周工作", "AddDetail", new { id = ViewBag.MainId, forMain = forMain }, new { @class = "btn btn-primary" })

    @if (!forMain)
    {
        @Html.ActionLink("重点项目与工作", "MainIndex", null, new { @class = "btn btn-default" })
        @Html.ActionLink("风险与待协调问题", "RiskIndex", null, new { @class = "btn btn-default" })
    }
    else
    {
        @Html.ActionLink("返回", "MainIndex", null, new { @class = "btn btn-default" })
    }

</p>
<!-- Ajax删除 -->
<script>
    function doDelete(id, name) {
        $('#toDelName').html(name);
        $('#toDelId').val(id);
        $('#myModal').modal();
    }

    function realDelete() {
        var id = $('#toDelId').val();
        var url = "/Proj/Delete/" + id;
        $.ajax({
            type: 'POST',
            url: url,
            success: function (msg) {
                $('#procResult').html(msg);

            },
            error: function () {
                $('#procResult').html("处理失败，请联系管理员");
            },
            complete: function () {
                $('#myModal2').modal();
            }
        });
    }
</script>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.RptDate)
        </th>
        @if (!forMain)
        {
            <th>
                @Html.DisplayNameFor(model => model.WorkMission)
            </th>
        }

        <th>
            @Html.DisplayNameFor(model => model.WorkDetail)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.WorkTarget)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Person)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.WorkStat)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.WorkTime)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Remark)
        </th>
        <th></th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.RptDate)
            </td>
            @if(!forMain)
            {
                <td>
                    @Html.DisplayFor(modelItem => item.WorkMission)
                </td>
            }
            
            <td>
                @Html.DisplayFor(modelItem => item.WorkDetail)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.WorkTarget)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Person)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.WorkStat)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.WorkTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Remark)
            </td>
            <td>
                @Html.ActionLink("编辑", "EditDetail", new { id = item.WRDetailID }) |
                <a href="#" onclick="doDelete('@item.WRDetailID','@item.RptDate 的工作任务')">删除</a>
            </td>
        </tr>
    }
</table>
<!--分页-->
@Html.PagedListPager(list: Model as PagedList.IPagedList<MyTeam.Models.WeekReportDetail>,
    generatePageUrl: Page => Url.Action("Index", new { pageNum = Page, id=ViewBag.MainId, forMain = forMain }))

<!-- 对话框1：确认删除 -->
<div class="modal fade" id="myModal" tabindex="-1" role="dialog"
     aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close"
                        data-dismiss="modal" aria-hidden="true">
                    &times;
                </button>
                <h4 class="modal-title" id="myModalLabel">
                    确认删除？
                </h4>
            </div>
            <div class="modal-body">
                确定要删除【<span id="toDelName"></span>】吗？
                <input type="hidden" id="toDelId" />
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default"
                        data-dismiss="modal">
                    取消
                </button>
                <button type="button" class="btn btn-primary" onclick="realDelete()" data-dismiss="modal">
                    确定
                </button>
            </div>
        </div>
    </div>
</div>

<!-- 对话框2：删除完成 -->
<div class="modal fade" id="myModal2" tabindex="-1" role="dialog"
     aria-labelledby="myModal2Label" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title" id="myModalLabel">
                    处理结果
                </h4>
            </div>
            <div class="modal-body">
                <span id="procResult"></span>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" data-dismiss="modal" onclick="javascript:window.location.reload()">
                    确定
                </button>
            </div>
        </div>
    </div>
</div>