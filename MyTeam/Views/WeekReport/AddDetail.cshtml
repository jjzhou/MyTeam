@model List<MyTeam.Models.WeekReportDetail>

@{
    ViewBag.Title = "添加每周工作";
}

<h2>@ViewBag.Title。</h2>


        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <p>
                <input type="submit" class="btn btn-primary" value="保存" />
                @Html.ActionLink("返回", "DetailIndex", null, new { @class = "btn btn-default" })
            </p>

            <table class="table">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model[0].RptDate)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model[0].WorkMission)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model[0].WorkDetail)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model[0].WorkTarget)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model[0].Person)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model[0].WorkStat)
                    </th>
                    <th>
                        工时
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model[0].Remark)
                    </th>               
                </tr>

                @for (int i = 0; i < Model.Count(); i++)
                {
                    <tr>
                        <td>
                            @Html.TextBoxFor(model => model[i].RptDate, new { @class = "form-control", @style = "width:160px" })
                        </td>
                        <td>
                            @Html.DropDownListFor(model => model[i].WorkMission, ViewBag.WorkMissionList as SelectList, new { @class = "form-control" })
                        </td>
                        <td>
                            @Html.TextBoxFor(model => model[i].WorkDetail, new { @class = "form-control" })
                        </td>
                        <td>
                            @Html.TextBoxFor(model => model[i].WorkTarget, new { @class = "form-control" })
                        </td>
                        <td>
                            @Html.TextBoxFor(model => model[i].Person, new { @class = "form-control", @style = "width:120px" })
                        </td>
                        <td>
                            @Html.DropDownListFor(model => model[i].WorkStat, ViewBag.WorkStatList as SelectList, new { @class = "form-control" })
                        </td>
                        <td>
                            @Html.TextBoxFor(model => model[i].WorkTime, new { @class = "form-control", @style="width:50px" })
                        </td>
                        <td>
                            @Html.TextBoxFor(model => model[i].Remark, new { @class = "form-control" })
                        </td>
                       
                         @Html.HiddenFor(model => model[i].RptPersonID)
                       
                    </tr>
                }

            </table>
        }
