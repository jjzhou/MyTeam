@model MyTeam.Models.ChangePsw

@{
    ViewBag.Title = "修改密码";
}

<h2>@ViewBag.Title。</h2>



<div class="row">
    <div class="col-md-8">
        @if (!string.IsNullOrEmpty(ViewBag.Message))
        {
        <div class="alert alert-success" role="alert">@ViewBag.Message</div>
        }
        @using (Html.BeginForm("ChangePsw", "User", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post,
                new { @class = "form-horizontal", role = "form" }))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div class="form-group">
                @Html.LabelFor(model => model.NewPsw, new { @class = "col-md-2 control-label" })
                <div class="col-md-10">
                    @Html.PasswordFor(model => model.NewPsw, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.NewPsw, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.NewPswRep, new { @class = "col-md-2 control-label" })
                <div class="col-md-10">
                    @Html.PasswordFor(model => model.NewPswRep, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.NewPswRep, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="保存" class="btn btn-primary" />

                </div>
            </div>
        }
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
