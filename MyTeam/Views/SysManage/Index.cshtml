@using PagedList
@using PagedList.Mvc
@model IEnumerable<MyTeam.Models.RetailSystem>
@{
    ViewBag.Title = "零售条线系统管理";
}
<h2>@ViewBag.Title。</h2>
<script src="/Scripts/jquery.unobtrusive-ajax.js"></script>
<p>
    <input type="button" onclick="doCreate()" class="btn btn-primary" value="添加系统" />
</p>

<script>
    function doDelete(id, name) {
        $('#toDelName').html(name);
        $('#toDelId').val(id);
        $('#myModal').modal();
    }

    function realDelete() {
        var id = $('#toDelId').val();
        var url = "/SysManage/Delete/" + id;
        $.ajax({
            type: 'POST',
            url: url,
            success: function (msg) {
                $('#procResult').html(msg);
                
            },
            error: function () {
                $('#procResult').html("处理失败，请联系管理员");
            },
            complete: function () {
                $('#myModal2').modal();                
            }
        });
    }

    // 在modal中编辑
    function doEdit(id, name) {
        $('#editName').html(name);
        var url = "/SysManage/Edit/" + id;
        $.ajax({
            type: 'GET',
            url: url,
            success: function (msg) {
                $('#EditMain').html(msg);
            },
            error: function () {
                $('#EditMain').html("处理失败，请联系管理员");
            },
            complete: function () {
                $('#myModal3').modal();
            }
        });
    }

    // 在modal中新增
    function doCreate() {
        var url = "/SysManage/Create/";
        $.ajax({
            type: 'GET',
            url: url,
            success: function (msg) {
                $('#CreateMain').html(msg);
            },
            error: function () {
                $('#CreateMain').html("处理失败，请联系管理员");
            },
            complete: function () {
                $('#myModal4').modal();
            }
        });
    }
</script>
<table class="table table-condensed table-bordered" style="font-size:0.8em;table-layout:fixed" width="100">
    <tr>
        <th width="10"></th>
        <th width="10">
            @Html.DisplayNameFor(model => model.SysNO)
        </th>
        <th width="10">
            @Html.DisplayNameFor(model => model.SysName)
        </th>
        <th width="10">
            @Html.DisplayNameFor(model => model.SysShortName)
        </th>
        <th width="10">
            @Html.DisplayNameFor(model => model.HostDept)
        </th>
        <th width="10">
            @Html.DisplayNameFor(model => model.SecondDept)
        </th>
        <th width="8">
            @Html.DisplayNameFor(model => model.BusiPerson)
        </th>
        <th width="8">
            @Html.DisplayNameFor(model => model.DevCenter)
        </th>
        <th width="8">
            @Html.DisplayNameFor(model => model.DevPerson)
        </th>
        <th width="8">
            @Html.DisplayNameFor(model => model.ReqPersonID)
        </th>
        <th width="8">
            @Html.DisplayNameFor(model => model.ReqEditPersonID)
        </th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                <a href="#" onclick="doEdit('@item.SysID','@item.SysName')">编辑</a> 
                @if (Session["IsAdmin"] != null && (bool)Session["IsAdmin"])
                {
                    <!--只有管理员可以删除-->
                    <span>| <a href="#" onclick="doDelete('@item.SysID','@item.SysName')">删除</a></span>
                }
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SysNO)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SysName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SysShortName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HostDept)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SecondDept)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BusiPerson)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DevCenter)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DevPerson)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ReqPersonName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ReqEditPersonName)
            </td>
        </tr>
    }
</table>
<!--分页-->
@Html.PagedListPager(list: Model as PagedList.IPagedList<MyTeam.Models.RetailSystem>,
    generatePageUrl: Page => Url.Action("Index", new { pageNum = Page }))

<!-- 对话框1：确认删除 -->
<div class="modal fade" id="myModal" tabindex="-1" role="dialog"
     aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close"
                        data-dismiss="modal" aria-hidden="true">
                    &times;
                </button>
                <h4 class="modal-title" id="myModalLabel">
                    确认删除？
                </h4>
            </div>
            <div class="modal-body">
                确定要删除【<span id="toDelName"></span>】吗？
                <input type="hidden" id="toDelId" />
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default"
                        data-dismiss="modal">
                    取消
                </button>
                <button type="button" class="btn btn-primary" onclick="realDelete()" data-dismiss="modal">
                    确定
                </button>
            </div>
        </div>
    </div>
</div>

<!-- 对话框2：删除完成 -->
<div class="modal fade" id="myModal2" tabindex="-1" role="dialog"
     aria-labelledby="myModal2Label" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">               
                <h4 class="modal-title" id="myModalLabel">
                    处理结果
                </h4>
            </div>
            <div class="modal-body">
                <span id="procResult"></span>                
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" data-dismiss="modal" onclick="javascript:window.location.reload()">
                    确定
                </button>
            </div>
        </div>
    </div>
</div>

<!-- 对话框3：编辑页面 -->
<div class="modal fade" id="myModal3" tabindex="-1" role="dialog"
     aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close"
                        data-dismiss="modal" aria-hidden="true">
                    &times;
                </button>
                <h4 class="modal-title" id="myModalLabel">
                    【<span id="editName"></span>】编辑
                </h4>
            </div>
            <div class="modal-body">
                <div id="EditMain"></div>
            </div>
        </div>
    </div>
</div>

<!-- 对话框4：新增页面 -->
<div class="modal fade" id="myModal4" tabindex="-1" role="dialog"
     aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close"
                        data-dismiss="modal" aria-hidden="true">
                    &times;
                </button>
                <h4 class="modal-title" id="myModalLabel">
                    零售条线系统新增
                </h4>
            </div>
            <div class="modal-body">
                <div id="CreateMain"></div>
            </div>
        </div>
    </div>
</div>

