@using PagedList
@using PagedList.Mvc
@model IEnumerable<MyTeam.Models.Proj>

@{
    ViewBag.Title = "项目状态跟踪管理";
}

<h2>@ViewBag.Title。</h2>

<p>
    @Html.ActionLink("添加项目状态跟踪", "Create", null, new { @class= "btn btn-primary"})
</p>

<!-- Ajax删除 -->
<script>
    function doDelete(id, name) {
        $('#toDelName').html(name);
        $('#toDelId').val(id);
        $('#myModal').modal();
    }

    function realDelete() {
        var id = $('#toDelId').val();
        var url = "/Proj/Delete/" + id;
        $.ajax({
            type: 'POST',
            url: url,
            success: function (msg) {
                $('#procResult').html(msg);

            },
            error: function () {
                $('#procResult').html("处理失败，请联系管理员");
            },
            complete: function () {
                $('#myModal2').modal();
            }
        });
    }
</script>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ProjName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ProjNo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.HostDept)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ReqAnalysisID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BusiPerson)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ProjManager)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Architect)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.ProjName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ProjNo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.HostDept)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ReqAnalysisName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.BusiPerson)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ProjManager)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Architect)
        </td>
        <td>
            @Html.ActionLink("编辑", "Edit", new { id=item.ProjID }) |
            @Html.ActionLink("详情", "Details", new { id = item.ProjID }) |
			<a href="#" onclick="doDelete('@item.ProjID','@item.ProjName 的项目状态记录')">删除</a>
        </td>
    </tr>
}
</table>

<!--分页-->
@Html.PagedListPager(list: Model as PagedList.IPagedList<MyTeam.Models.Proj>,
generatePageUrl: Page => Url.Action("Index", new { pageNum = Page }))

<!-- 对话框1：确认删除 -->
<div class="modal fade" id="myModal" tabindex="-1" role="dialog"
     aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close"
                        data-dismiss="modal" aria-hidden="true">
                    &times;
                </button>
                <h4 class="modal-title" id="myModalLabel">
                    确认删除？
                </h4>
            </div>
            <div class="modal-body">
                确定要删除【<span id="toDelName"></span>】吗？
                <input type="hidden" id="toDelId" />
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default"
                        data-dismiss="modal">
                    取消
                </button>
                <button type="button" class="btn btn-primary" onclick="realDelete()" data-dismiss="modal">
                    确定
                </button>
            </div>
        </div>
    </div>
</div>

<!-- 对话框2：删除完成 -->
<div class="modal fade" id="myModal2" tabindex="-1" role="dialog"
     aria-labelledby="myModal2Label" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title" id="myModalLabel">
                    处理结果
                </h4>
            </div>
            <div class="modal-body">
                <span id="procResult"></span>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" data-dismiss="modal" onclick="javascript:window.location.reload()">
                    确定
                </button>
            </div>
        </div>
    </div>
</div>

