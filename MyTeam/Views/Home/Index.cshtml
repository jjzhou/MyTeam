@using MyTeam.Models
@model MyTeam.Models.HomeResult
@{
    ViewBag.Title = "欢迎";
}
<script language="javascript" type="text/javascript" src="~/Scripts/My97DatePicker/WdatePicker.js"></script>
<script>
    $(document).ready(function () {
        $("#myTab a:first").tab('show')
    });
</script>
<div class="jumbotron">
    <h1 style="font-weight:bold">零售团队管理系统<span style="font-size:12px">(Beta)</span></h1>
</div>
<div class="row">
    <fieldset class="col-md-6">
        <div class="row">
            <div class="col-md-10">
                <form class="form-horizontal" role="form">
                    <div id="info"></div>
                    <ul class="nav nav-tabs" id="myTab">
                        <li><a href="#tabs1" data-toggle="tab">目前尚未出池的需求</a></li>
                        <li><a href="#tabs2" data-toggle="tab">超过三个月未出池的需求</a></li>
                    </ul>
                    <div class="tab-content" style="margin-top:20px">
                        <div id="tabs1" class="tab-pane fade in active">
                            <div class="list-group">
                                @foreach (HomeReq r in Model.ReqLs)
                                {
                                    string s = "/ReqManage/Index?IsQuery=True&ReqStat=入池&SysId=" + r.SysId;
                                    <a class="list-group-item" href=@s>
                                        <span class="badge">@r.ReqNum</span>
                                        @r.SysName
                                    </a>
                                }
                            </div>
                        </div>
                        <div id="tabs2" class="tab-pane fade in active">
                            <div class="list-group">
                                @foreach (HomeReqDelay r in Model.ReqDelayLS)
                                {
                                    string s = "/ReqManage/Index?IsQuery=True&ReqStat=入池&IsMoreThan3Month=true&SysId=" + r.SysId;
                                    <a class="list-group-item" href=@s>
                                        <span class="badge">@r.ReqDelayNum</span>
                                        @r.SysName
                                    </a>
                                }
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </fieldset>
    <fieldset class="col-md-6">
        <legend>延期项目</legend>
        <table class="table">
            <tr><th>项目名称</th><th>延期阶段</th></tr>
            @foreach (HomeProjDelay r in Model.ProjDetails)
            {
                string s = "/Proj/index?isQuery=True&isExcel=False&ProAcptDate=&RulesPublishDate=&ProjID=" + r.ProjId;

                <tr>
                    <td class="text-center"><a href=@s>@r.ProjName</a></td>
                    <td class="text-center">@r.DelayDetail</td>
                </tr>
            }
        </table>

    </fieldset>
