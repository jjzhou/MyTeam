                    @Html.TextBoxFor(model => model.ReqAmt, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.ReqAmt, "", new { @class = "text-danger" })
                </div>
            </div>
			
			<div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="button" value="下一步" class="btn btn-primary" onclick="Check()"/>
                    @Html.ActionLink("返回", "Index", null, new { @class = "btn btn-default" })
                </div>
            </div>
		}
	</div>
 </div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

<script>
    // 检查首条维护需求编号格式，然后再submit
    function Check() {
        var reqNo = $("#FirstReqDetailNo").val();
        if (reqNo.length > 0) {
            // ajax 检查
            $.ajax({
                type: "GET",
                url: "/ReqManage/CheckFirstReqDetailNo/" + reqNo,
                success: function (msg) {
                    if (msg != "S") {
                        alert("首条维护需求编号格式不正确");
                        return;
                    }
                },
                error: function () {
                    alert("检查初始需求编号格式失败，请联系管理员");
                    return;
                }
            });
        }

        $("#MyForm").submit();
    }
</script>